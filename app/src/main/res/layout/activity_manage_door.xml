<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@drawable/background_color"
    tools:context=".Manage_Door">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Choose door status"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/door_status_switch"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_centerInParent="true"
        android:text="Door Status"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAlignment="center"

        android:textSize="20sp" />


    <nl.joery.animatedbottombar.AnimatedBottomBar
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_color"
        app:abb_indicatorAppearance="round"
        app:abb_indicatorColor="#FFFFFF"
        app:abb_indicatorHeight="4dp"
        app:abb_indicatorMargin="16dp"
        app:abb_rippleEnabled="true"
        app:abb_selectedTabType="icon"
        app:abb_tabColor="#FFFCFC"
        app:abb_tabColorSelected="#FFFFFF"
        app:abb_tabs="@menu/menu"
        app:abb_textStyle="bold" />
</RelativeLayout>